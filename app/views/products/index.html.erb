<div class="min-h-screen">

  <div class="h-[8vh]"></div>

  <!-- Приветствие с изображением -->
  <div class="w-full h-[60vh] flex flex-col lg:flex-row items-center justify-center gap-5 bg-stone-100">

    <!-- Текстовый блок -->
    <div class="flex flex-col gap-8 w-1/2 md:w-2/5 lg:w-1/2 text-center lg:text-left max-w-2xl">
      <h1 class="font-main font-black text-4xl lg:text-5xl">
        FIND CLOTHES THAT MATCHES YOUR STYLE
      </h1>
      <p class="font-secondary text-base md:text-lg xl:text-xl text-stone-800">
        Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.
      </p>

      <!-- Кнопка -->
      <%= button_to "Каталог", products_path, method: :get, class: "bg-black font-main font-medium text-lg text-stone-100 rounded-3xl px-6 py-3 hover:bg-gray-800 transition duration-300" %>

      <!-- Блок с заслугами -->
      <div class="flex flex-row gap-4 divide-x divide-stone-300">
        <div class="flex flex-col items-center md:items-start justify-center px-2 py-2">
          <h1 class="font-main font-bold text-xl sm:text-2xl md:text-3xl lg:text-4xl">100+</h1>
          <p class="font-secondary font-normal text-base sm:text-lg md:text-xl text-stone-800">Брендов</p>
        </div>
        <div class="flex flex-col items-center md:items-start justify-center px-2 py-2">
          <h1 class="font-main font-bold text-xl sm:text-2xl md:text-3xl lg:text-4xl">2,000+</h1>
          <p class="font-secondary font-normal text-base sm:text-lg md:text-xl text-stone-800">Продуктов</p>
        </div> 
        <div class="flex flex-col items-center md:items-start justify-center px-2 py-2">
          <h1 class="font-main font-bold text-xl sm:text-2xl md:text-3xl lg:text-4xl">30,000+</h1>
          <p class="font-secondary font-normal text-base sm:text-lg md:text-xl text-stone-800">Покупателей</p>
        </div> 
      </div>
    </div>

    <!-- Изображение -->
    <div class="h-full">
      <%= image_tag 'main_photo.png', class: 'w-full h-full ml-auto object-bottom object-cover' %>
    </div>
  </div>

  <!-- Лента с брендами -->
  <div class="flex flex-row sm:flex-wrap gap-8 px-5 justify-between min-h-[8vh] h-auto bg-black">
    <% ['versace', 'zara', 'gucci', 'prada', 'calvin-klein'].each do |brand| %>
      <%= image_tag "#{brand}-logo.png", class: "max-h-full max-w-[120px] object-contain" %>
    <% end %>
  </div>

  <div class="justify-center m-12">
    <p class="text-5xl text-center font-black">Все товары</p>
  </div>



  <div class="w-full flex flex-wrap justify-center gap-4">
    <% @products.each do |product| %>
      <%= render ProductCardComponent.new(product: product) %>
    <% end %>
  </div>

</div>